<%= react_component 'ShowCard', {card_id: @question.id,title: @question.title, answers: @answers, description: markdown(@question.description_markdown), choice: @question.choice, tag_list: @question.tag_list, img: image_path('user-profile.png'), explanation: markdown(@question.explanation_markdown), vote_up: vote_question_path(@question, type: "up"), vote_down: vote_question_path(@question, type: "down"), votes: @question.reputation_for(:votes).to_i, current_user: current_user, current_user_voted: !current_user.voted_for?(@question)} %>
<h3>Comments:</h3>
<% @comments.each do |comment| %>
	<p><%= comment.comment_markdown %></p>
<% end %>
<%= render partial: "comments/form" %>
