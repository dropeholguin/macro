<div class="row">
	<div class="large-12 large-centered columns">
		<div class="row">
			<div class="large-3 columns">
				<%= react_component 'SearchCards', {title: "Search Cards", align: "left", font_size: "11px"}%>
				<%= react_component 'SearchCards', {title: "Include Cards with all of these tags", align: "left", font_size: "11px"}%>
				<%= react_component 'SearchCards', {title: "Include Cards with any of these tags", align: "left", font_size: "11px"}%>
				<%= react_component 'SearchCards', {title: "Exlude Cards with any of these tags", align: "left", font_size: "11px"}%>
			</div>
			<div class="large-5 columns">
				<% @questions.each do |question| %>
					<%= react_component 'ViewCardSasensei',{description: markdown(question.description_markdown), id: question.id} %>
				<% end %>
			</div>
			<div class="large-3 columns">
				
			</div>
		</div>		
	</div>
</div>
<div class="row">
	<div class="large-10 large-centered columns">
		<%= react_component 'IndexCard', {title_page:"SUBMITTED CARDS", question: @questions, questions_path: questions_path, tag_path: request.url}%>
		<div class="row white-background">			
			<div class="small-8 columns">
				<% @questions.each do |question| %>
					<%= react_component 'Card', {title: question.title, id: question.id, description: markdown(question.description_markdown), tag_list: question.tag_list,tag_path: request.url, button_1: "VIEW", button_2: "EDIT", button_3: "DELETE", owner: question.user, user: current_user} %>
				<% end %>
			</div>
		</div>
	</div>
</div>
