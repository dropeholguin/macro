<%= react_component 'NewCard', {csrfToken: form_authenticity_token, tag: @question.tag_list} %>

<%= form_for(@question) do |f| %>
	<%= f.text_field :title %>
	<%= f.text_area :description_markdown, id: "description" %>
	<%= f.text_area :explanation_markdown, id: "explanation" %>
	<div class="field space">
		<%= f.label :tag_list, "Categories" %>
	</div>
	<div class="small-10 small-push-1 medium-6 medium-push-3 text-center">
		<%= f.text_field :tag_list,'data-delimiter' => ', ', multiple: true, value: @question.tag_list.join(", ") %>
	</div>
	<div class="actions">
	<%= f.submit "Continue" %>
	</div>
<% end %>
