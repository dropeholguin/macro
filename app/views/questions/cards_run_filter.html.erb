<div class="row">
	<div class="large-10 large-centered columns">
		<%= react_component 'IndexCard', {question: @questions, questions_path: questions_path, tag_path: request.url}%>
		<div class="row white-background">
			<div class="small-4 columns">
				<div class="row">
					<%= react_component 'SearchCard', {questions_path: cards_run_filter_path}%>
				</div>
				<div class="row">
					<%= react_component 'SearchByTag', {tag_path: request.url}%>
				</div>		
			</div>
			<div class="small-8 columns">
				<%= @number_questions %>
				<% if @number_questions.to_i > 0 %>
					<%= link_to "Run Card", run_cards_path, class: "button" %>	
				<% end %>
			</div>
		</div>
	</div>
</div>